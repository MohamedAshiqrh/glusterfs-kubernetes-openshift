{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "gluster1",
        "annotations": {
            "description": "GlusterFS container deployment template",
            "tags": "gluster1"
        }
    },
    "labels": {
        "template": "gluster1"
    },
    "objects": [
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "annotations": {
                    "description": "Deploys the GlusterFS container"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Custom",
                    "customParams": {
                        "image": "gluster/gluster-centos"
                    }
                },
                "replicas": 1,
                "selector": {
                    "name": "${NAME}"
                },
                "template": {
                    "metadata": {
                        "name": "${NAME}",
                        "labels": {
                            "name": "${NAME}"
                        }
                    },
                    "spec": {
	                "nodeSelector": {
	                    "kubernetes.io/hostname": "${HOSTNAME}"
	                },
                        "containers": [
                            {
                                "image": "gluster/gluster-centos",
                                "name": "${NAME}",
				"volumeMounts": [
					{
						"name": "gluster-cgroup",
						"mountPath": "/sys/fs/cgroup"
					}
				],
		                "imagePullPolicy": "Always",
		                "securityContext": {
		                    "capabilities": {},
		                    "privileged": true
		                }
                            }
                        ],
		        "volumes": [
			    {
				"name": "gluster-cgroup",
				"hostPath": {
				    "path": "/sys/fs/cgroup"
				}
			    }
		        ]
                    }
                }
            }
        }
    ],
    "parameters": [
        {
            "name": "NAME",
            "displayName": "Name",
            "description": "The name assigned to all of the frontend objects defined in this template.",
            "required": true,
            "value": "gluster1"
        },
        {
            "name": "HOSTNAME",
            "displayName": "Hostname",
            "description": "The hostname where the template has to run",
            "required": true,
            "value": "node-1"
        }

    ]
}

